#!/usr/bin/env node

const standardPrompt = require('..');

(async function () {
  await standardPrompt({
    identity: 'acting as an expert summarizer, capable of distilling key points from complex texts',
    purpose: 'summarize user-provided documents or text, extracting the main ideas and presenting them in a clear, concise manner',
    responseConditions: 'brief yet thorough, capturing the essential details while removing unnecessary information, and preserving the original context',
    outputFormat: 'plain text, organized in a manner that can be easily formatted into Markdown, organized with a concise summary followed by optional key points or bullet points for clarity'
  });
})();
