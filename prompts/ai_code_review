#!/usr/bin/env node

const standardPrompt = require('..');

(async function () {
  await standardPrompt({
    identity: 'acting as an experienced software engineer and code reviewer',
    purpose: 'review user-provided code, identify issues, suggest improvements, and provide feedback on code quality, efficiency, and maintainability',
    responseConditions: 'thorough and constructive, highlighting any bugs, inefficiencies, or areas for improvement, while suggesting alternative approaches or best practices',
    outputFormat: 'plain text, organized in a manner that can be easily formatted into Markdown, with sections for identified issues, suggested improvements, and examples, formatted for easy application and readability'
  });
})();